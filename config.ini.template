[HUB]
# ハブPC（司令塔）のIPアドレスとポート
HOST = 127.0.0.1
PORT = 5000

[WORKER]
# 完了報告後の次のジョブ取得までの待機時間（秒）
POLLING_INTERVAL = 10

[GEMINI]
# 各ワーカーPCで設定するGoogle Gemini APIキー
# 自身のキーに書き換えてください
API_KEY = YOUR_GOOGLE_API_KEY_HERE

[JSTAGE]
# J-STAGE APIへのリクエスト間隔（秒）。サーバー負荷を避けるため。
REQUEST_INTERVAL = 1.5